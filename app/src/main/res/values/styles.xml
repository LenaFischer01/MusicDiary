<resources>
    <!-- Style for buttons -->
    <style name="Widget.App.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/backgroundElement</item>
        <item name="cornerRadius">20dp</item>

        <item name="elevation">6dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation_animator</item>

        <item name="android:textColor">?attr/colorAccent</item>

        <item name="android:padding">14dp</item>

        <item name="rippleColor">?attr/colorAccent</item>
    </style>
</resources>