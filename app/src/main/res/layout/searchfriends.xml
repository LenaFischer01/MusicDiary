<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    >

    <!-- Suchleiste für neue Freunde -->
    <EditText
        android:id="@+id/editTextSearchFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search new friends..."
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/rounded_layout_background"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewNoSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nothing_to_display"
        android:layout_gravity="center"
        android:textStyle="italic"
        />

    <!-- RecyclerView für Suchergebnisse -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>